<!-- complaint.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Complaint</title>
  <link rel="stylesheet" href="plugins/fontawesome-free/css/all.min.css">

    <link rel="stylesheet" href="css/location.css">


  <style>
    
.complaint-form {
  width: 70%;
  max-width: 500px;
  margin: 0 auto;
  font-family: 'Helvetica Neue', sans-serif;
  box-sizing: border-box;
  padding: 1rem;
}

.form-group {

  margin-bottom: 1em;
}

label {
  display: block;
  margin-bottom: 0.5em;
  font-weight: bold;
}

input,
textarea {
  display: block;
  width: 50%;
  padding: 0.5em;
  border: 1px solid #ccc;
  border-radius: 4px;
  font-size: 1em;
  box-sizing: border-box;
  margin-bottom: 1rem;
}

button[type="submit"] {
  display: block;
  margin: 1em auto;
  padding: 0.5em 1em;
  background-color: #333;
  color: #fff;
  border: none;
  border-radius: 4px;
  font-size: 1em;
  cursor: pointer;
}

@media (min-width: 768px) {
  .complaint-form {
    width: 70%;
  }
}

  </style>
</head>
<body>
  <h3><i id="back-btn" class="fas fa-arrow-left back-button"></i></h3>
  <div class="login-box">
    <h1 style="text-align: center; color: white;">Complaints/Reports</h1>

  <form method="POST" action="/complaints/addcomplaint">
    <div class="form-group">
      <label for="department">Department</label>
      <select class="form-control" name="department" id="department">
        <% departments.forEach(function(department) { %>
          <option value="<%= department._id %>"><%= department.departmentName %></option>
        <% }) %>
      </select>
    </div>
    <label for="complaintBy">Complaint By:</label>
    <input type="text" id="complaintBy" name="complaintBy" required>
    <br>
  
    <div class="form-group">
      <label for="complaintDate">Complaint Date</label>
      <input type="date" class="form-control" id="complaintDate" name="complaintDate" value="<%= currentDate %>" readonly>
    </div>
    <div class="form-group">
      <label for="facilityDescription">Facility Description</label>
      <select class="form-control" name="facilityDescription" id="facilityDescription">
        <% facilities.forEach(function(facility) { %>
          <option value="<%= facility._id %>"><%= facility.facility_desc %></option>
        <% }) %>
      </select>
    </div>
    <div class="form-group">
      <label for="complaint">Complaint</label>
      <textarea class="form-control" id="complaint" name="complaint" rows="5" required></textarea>
    </div>
    <button type="submit" class="btn btn-danger">
      <span></span>
      <span></span>
      <span></span>
      <span></span>
  Send Complaint
    </button>
    </form>
  </div>

  
  <script src="dist/js/location.js"></script>

</body>
</html>
