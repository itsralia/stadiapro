<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Maintenance Due</title>
    <link rel="stylesheet" href="plugins/fontawesome-free/css/all.min.css">

    <link rel="stylesheet" href="css/location.css">

<style>
    table {
          border-collapse: collapse;
          width: 100%;
          margin-top: 20px;
        }
        
        th, td {
          text-align: left;
          padding: 8px;
          border-bottom: 1px solid #ddd;
        }
        
        th {
          background-color: #4CAF50;
          color: white;
        }

        form {
      max-width: 600px;
      margin: 0 auto;
    }
</style>



  </head>
  <body>
    <h3><i id="back-btn" class="fas fa-arrow-left back-button"></i></h3>
    <div class="login-box">
   
    <h1 style="text-align: center; color: white;">Maintenance Due</h1>
    <% if (maintenanceDue.length > 0) { %>
      <table>
        <thead>
          <tr>
            <th>Maintenance ID</th>
            <th>Facility ID</th>
            <th>Description</th>
            <th>Next Due Date</th>
            <th>Assigned Staff</th>
          </tr>
        </thead>
        <tbody>
          <% for (let i = 0; i < maintenanceDue.length; i++) { %>
            <% const dueMaintenance = maintenanceDue[i]; %>
            <tr>
              <td><%= dueMaintenance.lastMaintenanceId ? dueMaintenance.lastMaintenanceId : 'N/A' %></td>
              <td><%= dueMaintenance.facilityIdent %></td>
              <td><%= dueMaintenance.facilityDescription %></td>
              <td><%= dueMaintenance.nextDueDate.toLocaleString() %></td>
              <td><%= dueMaintenance.assignedStaff ? dueMaintenance.assignedStaff : 'N/A' %></td>
            </tr>
          <% } %>
        </tbody>
      </table>
    <% } else { %>
      <p>No facility is currently due for maintenance.</p>
    <% } %>

    <script src="dist/js/location.js"></script>

  </body>
</html>
