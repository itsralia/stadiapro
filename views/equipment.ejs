


<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="css/location.css">


    <title>Equipment Category</title>
   
  </head>
  <body>
    <h3><i id="back-btn" class="fas fa-arrow-left back-button"></i></h3>  
    <div class="login-box">

      <div class="form-container">

    <h1 style="text-align: center; color: white;">Equipment Category</h1>
    <form action="/equipment/addequipment" method="POST">
      <div class="user-box">

        <label for="location">Category id</label><br><br>
        <input type="text" name="equipment_id" required>

        </div>

        <div class="user-box">

        <label for="location_id">Category:</label><br><br>
        <input type="text" name="equipment" required>
        </div>
        <button type="submit" class="btn btn-danger">Add Equipment</button>
    </form>
    </div>
    </div>
    <br>
    <table>
        <thead>
            <tr>
                <th> Category ID</th>
                <th>Category</th>
                <th>Delete</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            <% equipments.forEach(function(equipment) { %>
                <tr>
                    <td><%= equipment.category_id %></td>
                    <td><%= equipment.category %></td>
                    
                    <td class="icon" style="width: 50px;">
                        <form action="/equipment/deleteequipment/<%= equipment._id %>?_method=DELETE"  method="POST">
                          <button type="submit" class="btn btn-danger delete-icon"><i class="fa fa-trash"></i></button>
                        </form>
                      </td> 
                      <td class="icon" style="width: 50px;">
                        <form action="/equipment/edit/<%= equipment._id %>" method="GET">
                          <button type="submit" class="btn btn-primary edit-icon"><i class="fa fa-edit"></i></button>
                        </form>
                    </tr>




            <% }); %>
        </tbody>
    </table>
    <script src="dist/js/location.js"></script>

</body>
</html>
